<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head th:include="include :: header"></head>
<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="signupForm">
						<input id="id" name="id" th:value="${colorType.id}"  type="hidden">
							<div class="form-group">	
								<label class="col-sm-3 control-label">大风格：</label>
								<div class="col-sm-8">
									<!-- <input id="topStyleId" name="topStyleId" th:value="${colorType.topStyleId}" class="form-control" type="text"> -->
									<select id="topStyleId" name="topStyleId" class="form-control">
										<option value="0">===请选择大风格===</option>
										<option  th:each="top : ${topStyles}" th:value="${top.topId}" th:text="${top.topName}" th:selected="${top.topId == colorType.topStyleId}"></option>
									</select>
								</div>
							</div>
							<div class="form-group">	
								<label class="col-sm-3 control-label">小风格：</label>
								<div class="col-sm-8">
									<!-- <input id="leftStyleId" name="leftStyleId" th:value="${colorType.leftStyleId}" class="form-control" type="text"> -->
									<select id="leftStyleId" name="leftStyleId" class="form-control">
										<option value="0">===请选择小风格===</option>
										<option  th:each="left : ${leftStyles}" th:value="${left.leftId}" th:text="${left.leftName}" th:selected="${left.leftId == colorType.leftStyleId}"></option>
									</select>
								</div>
							</div>
							<div class="form-group">	
								<label class="col-sm-3 control-label">房间类型：</label>
								<div class="col-sm-8">
									<!-- <input id="romeTypeId" name="romeTypeId" th:value="${colorType.romeTypeId}" class="form-control" type="text"> -->
									<select id="romeTypeId" name="romeTypeId" class="form-control">
										<option value="0">===请选择房间类型===</option>
										<option  th:each="room : ${roomTypes}" th:value="${room.romeId}" th:text="${room.romeName}" th:selected="${room.romeId == colorType.romeTypeId}"></option>
									</select>
								</div>
							</div>
							<div class="form-group">	
								<label class="col-sm-3 control-label">颜色名称：</label>
								<div class="col-sm-8">
									<input id="color" name="color" th:value="${colorType.color}" class="form-control" type="text">
								</div>
							</div>
							<div class="form-group">	
								<label class="col-sm-3 control-label">Logo图：</label>
								<div class="col-sm-8">
									<!-- <input id="colorLogo" name="colorLogo" th:value="${colorType.colorLogo}" class="form-control" type="text"> -->
									<style>
									.layui-upload-file{display:none!important;}
									</style>
									<button type="button" class="btn  btn-success" id="uploadlogo" style="display:block">
											<i class="fa fa-qrcode" aria-hidden="true"></i>上传logo图
										</button>
									<input id="colorLogo" name="colorLogo" th:value="${colorType.colorLogo}" class="form-control" type="hidden">
									<img src="/img/bg.png" id="logoImg" th:src="${colorType.colorLogo}" style="margin-top:10px;max-width: 128px;">
								</div>
							</div>
							<div class="form-group">	
								<label class="col-sm-3 control-label">全景图：</label>
								<div class="col-sm-8">
									<!-- <input id="qjt" name="qjt" th:value="${colorType.qjt}" class="form-control" type="text"> -->
									<style>
									.layui-upload-file{display:none!important;}
									</style>
									<button type="button" class="btn  btn-success" id="uploadQjt" style="display:block">
											<i class="fa fa-qrcode" aria-hidden="true"></i>上传全景图
										</button>
									<input id="qjt" name="qjt" th:value="${colorType.qjt}" class="form-control" type="hidden">
									<img src="/img/bg.png" id="qjtImg" th:src="${colorType.qjt}" style="margin-top:10px;max-width: 128px;">
								</div>
							</div>
														
							<div class="form-group">
								<div class="col-sm-8 col-sm-offset-3">
									<button type="submit" class="btn btn-primary">提交</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
	</div>
	</div>
	<div th:include="include::footer"></div>
	<script type="text/javascript" src="/js/appjs/vr/colorType/edit.js">
	</script>
	<script src="/js/layui.js"></script>
	<script>
	layui.use('upload', function () {
        var upload = layui.upload;
        //执行实例
        var uploadInst = upload.render({
            elem: '#uploadlogo', //绑定元素
            url: '/vr/colorType/uploadColorLogo', //上传接口
            size: 60000,
            accept: 'file',
            before: function(obj){
                //this.data={client: $("#client").val(), version: $("#versionNo").val()}//携带额外的数据
            },
            done: function (r) {
            	//console.log(r);
            	if( r.code == 0 ){
	            	$("#colorLogo").val(r.fileName);
					$("#logoImg").attr("src", r.fileName);            		
            	} else {
            		layer.msg(r.msg);
            	}
                //layer.msg(r.msg);
                //parent.reLoad();
				//var index = parent.layer.getFrameIndex(window.name); // 获取窗口索引
				//parent.layer.close(index);
                //app.getData();
            },
            error: function (r) {
                layer.msg(r.msg);
            }
        });
    });
	
	layui.use('upload', function () {
        var upload = layui.upload;
        //执行实例
        var uploadInst = upload.render({
            elem: '#uploadQjt', //绑定元素
            url: '/vr/colorType/uploadQjt', //上传接口
            size: 60000,
            accept: 'file',
            before: function(obj){
                //this.data={client: $("#client").val(), version: $("#versionNo").val()}//携带额外的数据
            },
            done: function (r) {
            	//console.log(r);
            	if( r.code == 0 ){
	            	$("#qjt").val(r.fileName);
					$("#qjtImg").attr("src", r.fileName);            		
            	} else {
            		layer.msg(r.msg);
            	}
                //layer.msg(r.msg);
                //parent.reLoad();
				//var index = parent.layer.getFrameIndex(window.name); // 获取窗口索引
				//parent.layer.close(index);
                //app.getData();
            },
            error: function (r) {
                layer.msg(r.msg);
            }
        });
    });
	
	$(window).ready(function(){
		$("#topStyleId").change(function(){
			var val = $(this).val();
			if( val ){
				$.get("/vr/leftStyle/queryLeftStyleByTopStyleId", {topStyleId: val}, function(data){
					var options = "<option value=''>请选择小风格</option>";
					for( var i = 0; i < data.length; i++ ){
						options += "<option value='"+data[i].leftId+"'>"+data[i].leftName+"</option>";
					}
					$("#leftStyleId").html(options);
					$("#romeTypeId").html('<option value="">请选择房间类型</option>')
				});
			} else {
				$("#leftStyleId").html("<option value=''>请选择小风格</option>");
				$("#romeTypeId").html('<option value="">请选择房间类型</option>')
			}
		});
		
		$("#leftStyleId").change(function(){
			var val = $(this).val();
			if( val ){
				$.get("/vr/romeType/queryRomeTypeByLeftStyleId", {leftStyleId: val}, function(data){
					var options = "<option value=''>请选择房间类型</option>";
					for( var i = 0; i < data.length; i++ ){
						options += "<option value='"+data[i].romeId+"'>"+data[i].romeName+"</option>";
					}
					$("#romeTypeId").html(options);
				});
			} else {
				$("#romeTypeId").html("<option value=''>请选择房间类型</option>");
			}
		});
	});
	</script>
</body>
</html>
