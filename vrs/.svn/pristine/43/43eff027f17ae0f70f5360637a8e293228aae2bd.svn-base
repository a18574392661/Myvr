<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head th:include="include :: header"></head>
<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="signupForm">
						<input id="romeId" name="romeId" th:value="${romeType.romeId}"  type="hidden">
							<div class="form-group">	
								<label class="col-sm-3 control-label">大风格：</label>
								<div class="col-sm-8">
									<!-- <input id="topStyleId" name="topStyleId" th:value="${leftStyle.topStyleId}" class="form-control" type="text"> -->
									<select id="topStyleId" name="topStyleId" class="form-control">
										<option value="0">===请选择大风格===</option>
										<option  th:each="top : ${topStyles}" th:value="${top.topId}" th:text="${top.topName}" th:selected="${top.topId == romeType.topStyleId}"></option>
									</select>
								</div>
							</div>
							<div class="form-group">	
								<label class="col-sm-3 control-label">小风格：</label>
								<div class="col-sm-8">
									<!-- <input id="leftStyleId" name="leftStyleId" th:value="${romeType.leftStyleId}" class="form-control" type="text"> -->
									<select id="leftStyleId" name="leftStyleId" class="form-control">
										<option value="0">请选择小风格</option>
										<option  th:each="left : ${leftStyles}" th:value="${left.leftId}" th:text="${left.leftName}" th:selected="${left.leftId == romeType.leftStyleId}"></option>
									</select>
								</div>
							</div>
														<div class="form-group">	
								<label class="col-sm-3 control-label">房间名称：</label>
								<div class="col-sm-8">
									<input id="romeName" name="romeName" th:value="${romeType.romeName}" class="form-control" type="text">
								</div>
							</div>
							<!-- <div class="form-group">	
								<label class="col-sm-3 control-label">热点图：</label>
								<div class="col-sm-8">
									<style>
									.layui-upload-file{display:none!important;}
									</style>
									<button type="button" class="btn  btn-success" id="uploadRdt" style="display:inline-block">
										<i class="fa fa-qrcode" aria-hidden="true"></i>上传热点图
									</button>
									
									<button type="button" class="btn  btn-warning" id="clearRdt" style="display:inline-block;margin-left: 20px;">
										清空热点图
									</button>
									
									<input id="imgs" name="imgs" th:value="${romeType.imgs}" class="form-control" type="hidden">
									<div style="width: 100%;border: 1px solid #000000;padding: 10px;border-radius: 10px;" id="showImgs">
										<img style="max-height: 150px;margin-left: 20px;" th:each="img : ${rdtImgs}" th:src="${img}">
									</div>
								</div>
							</div> -->
							<div class="form-group">	
								<label class="col-sm-3 control-label">排序：</label>
								<div class="col-sm-8">
									<input id="romeSort" name="romeSort" th:value="${romeType.romeSort}" class="form-control" type="text">
								</div>
							</div>
																					<div class="form-group">
								<div class="col-sm-8 col-sm-offset-3">
									<button type="submit" class="btn btn-primary">提交</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
	</div>
	</div>
	<div th:include="include::footer"></div>
	<script type="text/javascript" src="/js/appjs/vr/romeType/edit.js">
	</script>
	<script src="/js/layui.js"></script>
	<script>
	$(window).ready(function(){
		
		$("#topStyleId").change(function(){
			var val = $(this).val();
			if( val ){
				$.get("/vr/leftStyle/queryLeftStyleByTopStyleId", {topStyleId: val}, function(data){
					var options = "<option value=''>请选择小风格</option>";
					for( var i = 0; i < data.length; i++ ){
						options += "<option value='"+data[i].leftId+"'>"+data[i].leftName+"</option>";
					}
					$("#leftStyleId").html(options);
				});
			} else {
				$("#leftStyleId").html("<option value=''>请选择小风格</option>");
			}
		});
		
		$("#clearRdt").click(function(){
			$("#showImgs").html("");
        	$("#imgs").val("");
		})
		
	});
	
	layui.use('upload', function () {
        var upload = layui.upload;
        //执行实例
        var uploadInst = upload.render({
            elem: '#uploadRdt', //绑定元素
            url: '/vr/romeType/uploadImgs', //上传接口
            size: 600000,
            multiple: true,
            accept: 'file',
            before: function(obj){
                //this.data={client: $("#client").val(), version: $("#versionNo").val()}//携带额外的数据
            },
            done: function (r) {
            	//console.log(r);
            	if( r.code == 0 ){
	            	var img = "<img src='"+r.fileName+"' style='max-height: 150px;margin-left: 20px;'/>";
	            	$("#showImgs").append(img);
	            	var imgsUrl = $("#imgs").val();
	            	if( imgsUrl ){
	            		imgsUrl = imgsUrl + "," + r.fileName;
	            	} else {
	            		imgsUrl = r.fileName;
	            	}
	            	$("#imgs").val(imgsUrl);
            	} else {
            		layer.msg(r.msg);
            	}
                //layer.msg(r.msg);
                //parent.reLoad();
				//var index = parent.layer.getFrameIndex(window.name); // 获取窗口索引
				//parent.layer.close(index);
                //app.getData();
            },
            error: function (r) {
                layer.msg(r.msg);
            }
        });
    });
	</script>
</body>
</html>
