<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head th:include="include :: header"></head>
<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="signupForm">
						<input id="id" name="id" th:value="${currlog.id}"  type="hidden">


							<div class="form-group">
								<label class="col-sm-3 control-label">课程名称：</label>
								<div class="col-sm-8">
									<!--		<input id="cid" name="cid" class="form-control" type="text">-->

									<select id="cid" name="cid"   class="form-control" required="required">
										<option value="">请选择</option>
										<option th:each="dx :${clist}" th:value="${dx.id}" th:text="${dx.cname}" th:selected="${currlog.cid==dx.id}"></option>
									</select>

								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">课程节数:</label>
								<div class="col-sm-8">

									<select  id="ji" name="ji"  class="form-control" required="required" >
										<option value="">请选择</option>
										<option th:each="dx :${dlist}" th:value="${dx.id}" th:text="${dx.name}" th:selected="${currlog.ji==dx.id}"></option>
									</select>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">可预约时间:</label>
								<div class="col-sm-8">
									<input id="daydate" readonly  name="daydate" class="form-control" type="text" th:value="${#dates.format(currlog.daydate, 'yyyy-MM-dd')}" >
								</div>
							</div>
							<!--<div class="form-group">
								<label class="col-sm-3 control-label">课程开始时间：</label>
								<div class="col-sm-8">
									<input id="startdate" name="startdate" class="form-control" type="text" th:value="${#dates.format(currlog.startdate, 'yyyy-MM-dd HH:mm:ss')}" >
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">课程结束时间：</label>
								<div class="col-sm-8">
									<input id="enddate" name="enddate" class="form-control" type="text" th:value="${#dates.format(currlog.enddate, 'yyyy-MM-dd HH:mm:ss')}">
								</div>
							</div>-->
							<input type="hidden"  id="sm" th:value="${#dates.format(new java.util.Date().getTime(), 'yyyy-MM-dd')}" >


							<div class="form-group">
								<div class="col-sm-8 col-sm-offset-3">
									<span t class="btn btn-success btn-sm" onclick="xz()">选座位</span>
								</div>
							</div>


																					<div class="form-group">
								<div class="col-sm-8 col-sm-offset-3">
									<button type="submit" class="btn btn-primary">提交</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
	</div>
	</div>
	<div th:include="include::footer"></div>
	<script type="text/javascript" src="/js/appjs/ts/currlog/edit.js">
	</script>


	<script src="/layui/layui.js"></script>

	<script src="laydate/laydate.js"></script>

	<script>
		function xz(){

			var index=layer.open({
				type : 2,
				title : '对应座位',
				maxmin : true,
				shadeClose : false, // 点击遮罩关闭层
				area : [ '800px', '520px' ],
				content : "/ts/zw?cid="+$("#id").val() // iframe的url
			});

			layer.full(index);


		}

		//执行一个laydate实例
		layui.use('laydate', function(){
			var laydate = layui.laydate;

			laydate.render({
				elem: '#daydate' //指定元素
				,trigger: 'click'

			});
		})

		//执行一个laydate实例
		layui.use('laydate', function(){
			var laydate = layui.laydate;

			laydate.render({
				elem: '#startdate' //指定元素
				,trigger: 'click'
				,type: 'datetime'
			});

		})

		//执行一个laydate实例
		layui.use('laydate', function(){
			var laydate = layui.laydate;

			laydate.render({
				elem: '#enddate' //指定元素
				,trigger: 'click'
				,type: 'datetime'

			});

		})



	</script>


</body>
</html>
