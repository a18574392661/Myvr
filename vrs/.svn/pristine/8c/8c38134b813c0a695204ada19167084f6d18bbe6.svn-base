<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head th:include="include :: header"></head>
<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="signupForm">
						<input id="id" name="id" th:value="${imgCls2.id}"  type="hidden">
								 <div class="form-group">	
								<label class="col-sm-3 control-label">所属分类：</label>
								<div class="col-sm-8">
									<input readonly="readonly" th:value="${menu.name}" class="form-control" type="text">
								</div>
							</div> 
							
							<div class="form-group">	
								<label class="col-sm-3 control-label">分类名称：</label>
								<div class="col-sm-8">
									<input id="name" name="name" th:value="${imgCls2.name}" class="form-control" type="text">
								</div>
							</div>
							
							<!-- 二级分类类型 -->
							<div class="form-group" th:unless="${imgCls2.pid == 0}" >	
								<label class="col-sm-3 control-label">上级分类：</label>
								<div class="col-sm-8">
									<select class="form-control" id="vrs_img_cls2_pid" name="pid">
										<option th:each="list : ${parent}" th:value="${list.id}" th:selected="${imgCls2.pid == list.id}">[[${list.name}]]</option>
									</select>
								</div>
							</div>
							
							<div class="form-group">	
								<label class="col-sm-3 control-label"> 排序：</label>
								<div class="col-sm-8">
									<input id="sort" name="sort" th:value="${imgCls2.sort}" class="form-control" type="number">
								</div>
							</div>
														<div class="form-group">	
								<label class="col-sm-3 control-label">分类状态：</label>
								<div class="col-sm-8">
									<!-- <input id="status" name="status" th:value="${imgCls2.status}" class="form-control" type="text"> -->
									<select class="form-control" name="status">
										<option value="1" th:selected="${imgCls2.status == 1}">显示</option>
										<option value="0" th:selected="${imgCls2.status == 0}">隐藏</option>
									</select>
								</div>
							</div>
														
																					<div class="form-group">
								<div class="col-sm-8 col-sm-offset-3">
									<button type="submit" class="btn btn-primary">提交</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
	</div>
	</div>
	<div th:include="include::footer"></div>
	<script type="text/javascript" src="/js/appjs/vrs/imgCls2/edit.js">
	</script>
</body>
</html>
