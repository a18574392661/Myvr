<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head th:include="include :: header"></head>
<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="signupForm">
						<input id="id" name="id" th:value="${imgclsImgs.id}"  type="hidden">
							<div class="form-group">


								<div class="form-group">
									<label class="col-sm-3 control-label">排序：</label>
									<div class="col-sm-8">
										<input id="sort" name="sort" th:value="${imgclsImgs.sort}" class="form-control" type="text">
									</div>
								</div>




							<div class="form-group">
								<label class="col-sm-3 control-label">图片：</label>
								<div class="col-sm-8">

									<style>
										.layui-upload-file{display:none!important;}
									</style>
									<button type="button" class="btn  btn-success" id="uploadlogo" style="display:block">
										<i class="fa fa-qrcode" aria-hidden="true"></i>上传图片
									</button>
									<input id="img" name="img" class="form-control" type="hidden">
									<img src="/img/bg.png" id="simg"  th:src="${imgclsImgs.src}" style="margin-top:10px;max-width: 128px;">
								</div>
							</div>

							<input id="cid" name="cid" th:value="${imgclsImgs.cid}" class="form-control" type="hidden">

																					<div class="form-group">
								<div class="col-sm-8 col-sm-offset-3">
									<button type="submit" class="btn btn-primary">提交</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
	</div>
	</div>
	<div th:include="include::footer"></div>
	<script type="text/javascript" src="/js/appjs/vrs/imgclsImgs/edit.js">
	</script>

	<script type="text/javascript" src="/js/appjs/common.js"></script>
	<script src="/js/layui.js"></script>

<script>
	imageUpload("uploadlogo","business","simg","img");
</script>
</body>
</html>
