<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head th:include="include :: header"></head>

<style>
	.control-label{height: 46px;line-height: 40px;}
</style>

<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="signupForm">
						<input id="id" name="id" th:value="${pro.id}"  type="hidden">



							<div class="form-group">
								<label class="col-sm-3 control-label">编号:(不输入自动生成)</label>
								<div class="col-sm-8">
									<input id="code" name="code" class="form-control" th:value="${pro.code}" type="text" placeholder="请输入对应编号">
								</div>
							</div>


							<div class="form-group">
								<label class="col-sm-3 control-label">标题</label>
								<div class="col-sm-8">
									<input id="name" name="name" th:value="${pro.name}" class="form-control" type="text">
								</div>
							</div>

							<div id="test">
							<div class="form-group" id="pric">
								<label class="col-sm-3 control-label">请输入价格:</label>
								<div class="col-sm-8">
									<input id="pricce" name="pricce"  th:value="${pro.pricce}" class="form-control" type="number">
								</div>
							</div>

							<div class="form-group" id="counts">
								<label class="col-sm-3 control-label">数量:</label>
								<div class="col-sm-8">
									<input id="count" name="count"   th:value="${pro.count}" class="form-control" type="text">
								</div>
							</div>
							</div>
							<div class="form-group" >
								<label class="col-sm-3 control-label">是否免费:</label>
									<div class="col-sm-8" >
										<label  for="payState" onclick="xz2('payState')" >
											<input style="vertical-align: middle;"  id="payState" name="payState"  type="radio" value="0" th:checked="${pro.payState==0?true:false}" >
											<span style="vertical-align: middle;display: inline-block;height: 46px;line-height: 50px;">免费</span>
										</label>
										<label style="margin-left: 20px;" for="payYes" onclick="xz2('payYes')">
											<input style="vertical-align: middle;" name="payState" id="payYes" type="radio" value="1" th:checked="${pro.payState==1?true:false}" >
											<span style="vertical-align: middle;display: inline-block;height: 46px;line-height: 50px;">付费</span>
										</label>
									</div>
							</div>

							<div class="form-group" >
								<label class="col-sm-3 control-label">是否展示到网页:</label>
								<div class="col-sm-8" >
									<label  for="payState2"   onclick="xz2('status')">
										<input style="vertical-align: middle;"  id="status" name="status"  type="radio" value="1" th:checked="${pro.status==1?true:false}">
										<span style="vertical-align: middle;display: inline-block;height: 46px;line-height: 50px;">展示</span>
									</label>
									<label style="margin-left: 20px;" for="payYes2"  onclick="xz2('sta2')">
										<input style="vertical-align: middle;" name="status" id="sta2"  type="radio" value="0" th:checked="${pro.status==0?true:false}">
										<span style="vertical-align: middle;display: inline-block;height: 46px;line-height: 50px;">不展示</span>
									</label>
								</div>
							</div>

						<!--	<div class="form-group">
								<label class="col-sm-3 control-label">是否免费:</label>
								<div class="col-sm-8">
									免费:<input id="payState" name="payState"  type="radio"  th:checked="${payState==0?true:false}"  value="0">
									付费:<input   name="payState"    type="radio"  th:checked="${payState==1?true:false}"  value="1">
								</div>
							</div>-->

							<div class="form-group">
								<label class="col-sm-3 control-label">产品全景图：</label>
								<div class="col-sm-8">

									<style>
										.layui-upload-file{display:none!important;}
									</style>
									<button type="button" class="btn  btn-success" id="uploadlogo" style="display:block">
										<i class="fa fa-qrcode" aria-hidden="true"></i>上传图片
									</button>
									<input id="img" name="img" class="form-control" type="hidden" th:value="${pro.img}">
									<img src="/img/bg.png" id="simg" style="margin-top:10px;max-width: 128px;" th:src="${pro.img}">
								</div>
							</div>


<!--
							<div class="form-group">
								<label class="col-sm-3 control-label">产品缩图：</label>
								<div class="col-sm-8">

									<style>
										.layui-upload-file{display:none!important;}
									</style>
									<button type="button" class="btn  btn-success" id="uploadlogo2" style="display:block">
										<i class="fa fa-qrcode" aria-hidden="true"></i>上传图片
									</button>
									<input id="simg1" name="simg" class="form-control" th:value="${pro.simg}" type="hidden">
									<img src="/img/bg.png" id="simgs" style="margin-top:10px;max-width: 128px;" th:src="${pro.simg}">
								</div>
							</div>-->

							<input id="simg1" name="simg" class="form-control" type="hidden" th:value="${pro.simg}">

							<div class="form-group">
								<label class="col-sm-3 control-label">排序:</label>
								<div class="col-sm-8">
									<input id="sort" name="sort" class="form-control" type="number" th:value="${pro.sort}">
								</div>
							</div>


							<input type="hidden" th:value="${pro.cid}" name="cid"  id="cid2">
							<div class="form-group">
								<label class="col-sm-3 control-label">所属分类标签:</label>
								<div class="col-sm-8">
									<span  th:each="title : ${typeCls}">


											<!--<input style="vertical-align: middle;"  id="payState" name="payState"  type="radio" value="0" th:checked="${payState==0?true:false}" >
											<span style="vertical-align: middle;display: inline-block;height: 46px;line-height: 50px;">免费</span>-->


											<label  for="payState1" >
											<input style="vertical-align: middle;" type="checkbox" name="tids" th:value="${title.id}" th:checked="${title.checkeds}" th:id="'c'+${title.id}">
												<span style="vertical-align: middle;display: inline-block;height: 46px;line-height: 50px;" th:text="${title.name}" th:onclick="'javascript:ff('+${title.id}+');'"></span> &nbsp;
												</label>
									</span>


								</div>
							</div>


							<!--根据展示的标签展示不同的分类 typeid不同-->

							<!--2 3 4 一级分类的-->
							<div class="form-group" >
								<label class="col-sm-3 control-label">选择标签分类：</label>
								<div class="col-sm-5">
									<select  id="typeid" name="typeid" class="form-control" required="required" style="width: 15rem;">
										<option value="" >请选择</option>
										<option  th:each="title : ${typeCls}" th:text="${title.name}" th:value="${title.id}" th:selected="${title.id==pro.typeid}">请选择</option>
									</select>

								</div>
							</div>
							<!-- 分类-->
							<input th:value="${categorystr}" type="hidden" id="cids">
							<div id="bigCls">
								<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
									<div class="panel panel-default" th:each="cls : ${list}">
										<div class="panel-heading" role="tab" id="headingOne">
											<h4 class="panel-title">
												<a th:text="${cls.name}" role="button" data-toggle="collapse" data-parent="#accordion" th:href="'#collapseOne'+${cls.id}" aria-expanded="true" aria-controls="collapseOne">
												</a>
											</h4>
										</div>
										<div th:id="'collapseOne'+${cls.id}" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
											<div class="panel-body">
												<span th:each="cs,chi : ${cls.childs}"> <!--遍历chids的分类 -->
													<input th:onclick="'checkSingle(this)'" data-th-index="${chi.index}"  type="checkbox" th:value="${cs.id}" style="vertical-align: middle;" name="childs" >
													<span  th:onclick="'checkSingle(this)'" data-th-index="${chi.index}" style="vertical-align: middle;display: inline-block;height: 46px;line-height: 50px;margin-right: 1rem;"  th:text="${cs.name}"> </span>
												</span>
											</div>
										</div>
									</div>
								</div>
							</div>


							<div id="cls">
								<div class="form-group">
									<label class="col-sm-3 control-label">一级分类:</label>
									<div class="col-sm-8">


										<select  id="cid"  class="form-control" required="required" style="width: 15rem;">
											<option value="" >请选择</option>
										</select>

									</div>
								</div>
							</div>

							<!--二级分类的-->
							<div id="twos">
								<div class="form-group">
									<label class="col-sm-3 control-label">分类名称:</label>
									<div class="col-sm-8">
										<select  id="t1"  class="form-control" required="required" style="width: 15rem;">
											<option value="" >请选择</option>
										</select>
										<br/>
									</div>
								</div>

								<div class="form-group">
									<label class="col-sm-3 control-label">二级分类:</label>
									<div class="col-sm-8">
										<select  id="t2"  class="form-control" required="required" style="width: 15rem;">
											<option value="" >请选择</option>
										</select>
										<br/>
									</div>
								</div>

							</div>





																					<div class="form-group">
								<div class="col-sm-8 col-sm-offset-3">
									<button type="submit" class="btn btn-primary">提交</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
	</div>
	</div>
	<div th:include="include::footer"></div>
	<script type="text/javascript" src="/js/appjs/vrs/pro/edit.js">
	</script>

	<script type="text/javascript" src="/js/appjs/common.js"></script>
	<script src="/js/layui.js"></script>



	<script>
		function ff(id) {
			var sta=$("#c"+id).prop("checked");
			$("#c"+id).prop("checked",!sta)
		}
	</script>


	<script>
		$("#test").hide();
		//imageUpload("uploadlogo","pro","simg","img");
		imageUpload2("uploadlogo","pro","simg","img");
		imageUpload("uploadlogo2","pro","simgs","simg1");

		$(function () {
			$("input").addClass("input-lg");
			//改变事件
			$("#cls").hide();
			$("#bigCls").hide();
			$("#twos").hide();
			$("#counts").hide();
			$("#pric").hide();
			//根据大分类显示
			var typeid=$("#typeid").val();

			if (typeid==2){

				$("#cid option:not(:first)").remove();


				$("#bigCls").show();
			}
			else{
				//2二级分类隐藏
				$("#bigCls").hide();
				//	$("#bigCls").empty();
				$("#cls").show();
				var tableName="";

				//查询同一个
				$.get("/vrs/titleCls/getTypeid/"+typeid,function (data) {
					if(data.typeid==2){
						$("#cls").hide();
						var cidvalue=$("#cid2").val();
						//alert(cidvalue)
						//alert(cid+"sss")
						var pid;
						tableName = "vrs_img_cls2";
							//显示
							$("#twos").show();
							//先查子分类1 在拼接父分类





							$.get("/vrs/imgCls2/querynotParentCls",function (data) {

								for (let i = 0; i <data.length; i++) {
									if(cidvalue==data[i].id){
										$("#t2").append("<option selected='selected' value='"+data[i].id+"'>"+data[i].name+"</option>")
										pid=data[i].pid;
										//拼接父级
										//显示父级


										$.get("/vrs/imgCls2/queryParentCls",function (data) {
											for (let j = 0; j <data.length; j++) {
												$("#t1").append("<option value='"+data[j].id+"'>"+data[j].name+"</option>");

											}
											$("#t1 option[value='"+pid+"']").attr("selected","selected");
										})



									}else{
										$("#t2").append("<option value='"+data[i].id+"'>"+data[i].name+"</option>")
									}

								}


							});


					}else  if(data.typeid==3||data.typeid==4){
						$("#twos").hide();


						//门窗设计
						if (data.typeid == 3) {
							tableName = "vrs_img_cls4";

						}
						//换色系统
						if (data.typeid == 4) {

							$("#counts").show();
							$("#pric").show();
							tableName = "vrs_img_cls3";

						}

						$.post("/vrs/imgCls2/queryTableCls", {"tableName": tableName}, function (data) {
							for (let i = 0; i < data.length; i++) {
								if (data[i].id == $("#cid2").val()) {
									$("#cid").append("<option selected='selected' value='" + data[i].id + "'>" + data[i].name + "</option>")
								} else {
									$("#cid").append("<option value='" + data[i].id + "'>" + data[i].name + "</option>")
								}

							}

						});


					}

				})

			}



			//改变的时候
			$("#typeid").change(function () {
				//复选框清空
				$("#cid option:not(:first)").remove();
					delChecbox();
				$("#cid2").val("");
				if(this.value=='') {
					$("#cls").hide();
					$("#bigCls").hide();
				}
				//拿到id去获取typeid 选择不同的分类
				$.get("/vrs/titleCls/getTypeid/"+this.value,function (data) {
					//alert(data.name+"//"+data.typeid);
					if (data.typeid==1){


						$("#counts").hide();
						$("#pric").hide();
						$("#twos").hide();

						$("#counts").val(0);
						$("#pric").val(0);

						//查询二级分类的表
						$("#cls").hide();
						$("#cid option:not(:first)").remove();

						$("#bigCls").show();

						//加载框
						checkbox();
					}
					else if(data.typeid==2){
						$("#cls").hide();
						$("#count").val("");
						$("#pricce").val("");
						$("#bigCls").hide();
						$("#counts").hide();
						$("#pric").hide();
						$("#twos").show();
						$.post("/vrs/imgCls2/queryParentCls",{"pid":0},function (data) {
							for (let i = 0; i <data.length; i++) {
								$("#t1").append("<option value='"+data[i].id+"'>"+data[i].name+"</option>")
							}

						});
					}
					else if (data.typeid==4||data.typeid==3){
						//2二级分类隐藏
						$("#bigCls").hide();
						//	$("#bigCls").empty();
						$("#cls").show();
						var tableName="";

						//查询同一个


						//门窗设计
						if(data.typeid==3){
							//二级分类隐藏
							$("#twos").hide();
							$("#t1 option:not(:first)").remove();
							$("#t2 option:not(:first)").remove();
							tableName="vrs_img_cls4";
							$("#counts").hide();
							$("#pric").hide();
							$("#count").val("");
							$("#pricce").val("");

						}
						//换色系统
						if(data.typeid==4){

							$("#twos").hide();
							$("#t1 option:not(:first)").remove();
							$("#t2 option:not(:first)").remove();
							$("#cls").show();
							$("#bigCls").hide();
							tableName="vrs_img_cls3";
							$("#counts").show();
							$("#pric").show();

						}

						$.post("/vrs/imgCls2/queryTableCls",{"tableName":tableName},function (data) {
							for (let i = 0; i <data.length; i++) {
								$("#cid").append("<option value='"+data[i].id+"'>"+data[i].name+"</option>")
							}

						});


					}
				})
			})


			$("#cid").change(function (){

				$("#cid2").val(this.value);
			});

			//二级选择

			//改变事件
			$("#t1").change(function () {

				$("#t2 option:not(:first)").remove();
				$.post("/vrs/imgCls2/queryParentCls",{"pid":this.value},function (data) {
					for (let i = 0; i <data.length; i++) {
						$("#t2").append("<option value='"+data[i].id+"'>"+data[i].name+"</option>")
					}

				});

			});

			//测试
			$("#t2").change(function () {
				$("#cid2").val(this.value);
				var b=$("#cid2").val();

				//alert($("#cid2").val());
			})
		})

			

		function delChecbox(){
			var lens=document.getElementsByName("childs");

			for (let i = 0; i <lens.length ; i++) {
				lens[i].checked=false;
			}

		}
		
		//单选框
		var currentindex = -1;
		function checkSingle(obj){
			//获取对象
			var $obj = $(obj);
			var flag = $obj.prop("checked") ? $obj.prop("checked") : true;
			var index = $obj.attr("index");

			///获取input
			var ids = $obj.parent().parent().parent().attr("id");
			var lens = document.getElementById(ids).getElementsByTagName("input");
			for(var i = 0;i < lens.length;i++){
				if(i != index){
					$(lens[i]).prop("checked",!flag);
				}else{
					if(currentindex == index){
						$(lens[index]).prop("checked",!flag);
						currentindex = -1;
					}else{
						$(lens[index]).prop("checked",flag);
						currentindex = index;
					}
				}
			}
		}
		
		//重新选择后勾选
		function checkbox(){
			var checks = document.getElementById("accordion").getElementsByTagName("input");
			var cidcontains = $("#cids").val().split(",");		
			for(var i = 0;i < checks.length;i++){
					var check = $(checks[i]).val(); //checkbox
				for(var j = 0;j < cidcontains.length;j++){
					var contains = cidcontains[j];//选中的分类
					if(check == contains){
						$(checks[i]).prop("checked",true);
					}
				}
			}
		}
		checkbox();




		function xz2(dx) {
			$("#"+dx).prop("checked",true)

		}

	</script>

</body>
</html>
