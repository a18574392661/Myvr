<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head th:include="include :: header"></head>
<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="signupForm">
						<input id="id" name="id" th:value="${imgCls4.id}"  type="hidden">
									 <div class="form-group">	
								<label class="col-sm-3 control-label">所属分类：</label>
								<div class="col-sm-8">
									<input readonly="readonly" th:value="${menu.name}" class="form-control" type="text">
								</div>
							</div> 
							
							<div class="form-group">	
								<label class="col-sm-3 control-label">分类名称：</label>
								<div class="col-sm-8">
									<input id="name" name="name" th:value="${imgCls4.name}" class="form-control" type="text">
								</div>
							</div>
							
							<div class="form-group">	
								<label class="col-sm-3 control-label"> 排序：</label>
								<div class="col-sm-8">
									<input id="sort" name="sort" th:value="${imgCls4.sort}" class="form-control" type="number">
								</div>
							</div>
														<div class="form-group">	
								<label class="col-sm-3 control-label">分类状态：</label>
								<div class="col-sm-8">
									<!-- <input id="status" name="status" th:value="${imgCls4.status}" class="form-control" type="text"> -->
									 <select class="form-control" name="status">
										<option th:selected="${imgCls4.status == 1}" value="1">显示</option>
										<option th:selected="${imgCls4.status == 0}" value="0">隐藏</option>
									</select>
								</div>
							</div>
																					<div class="form-group">
								<div class="col-sm-8 col-sm-offset-3">
									<button type="submit" class="btn btn-primary">提交</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
	</div>
	</div>
	<div th:include="include::footer"></div>
	<script type="text/javascript" src="/js/appjs/vrs/imgCls4/edit.js">
	</script>
</body>
</html>
