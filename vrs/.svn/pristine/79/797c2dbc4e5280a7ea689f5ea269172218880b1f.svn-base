<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head th:include="include :: header"></head>
<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="signupForm">
						<input id="id" name="id" th:value="${colorImgcls.id}"  type="hidden">



							<div class="form-group">
								<label class="col-sm-3 control-label">色卡：</label>
								<div class="col-sm-8">
									<style>
										.layui-upload-file{display:none!important;}
									</style>
									<button type="button" class="btn  btn-success" id="uploadlogo2" style="display:block">
										<i class="fa fa-qrcode" aria-hidden="true"></i>上传色卡图1
									</button>
									<input id="colorimg" name="colorimg" class="form-control" type="hidden" th:value="${colorImgcls.colorimg}">
									<img src="/img/bg.png" id="simgs" style="margin-top:10px;max-width: 128px;" th:src="${colorImgcls.colorimg}">
								</div>
							</div>


							<div class="form-group">
								<label class="col-sm-3 control-label">全景图：</label>
								<div class="col-sm-8">

									<style>
										.layui-upload-file{display:none!important;}
									</style>
									<button type="button" class="btn  btn-success" id="uploadlogo" style="display:block">
										<i class="fa fa-qrcode" aria-hidden="true"></i>上传图片
									</button>
									<input id="img" name="img" class="form-control" type="hidden" th:value="${colorImgcls.img}">
									<img src="/img/bg.png" id="simg" style="margin-top:10px;max-width: 128px;" th:src="${colorImgcls.img}">

								</div>
							</div>

														<div class="form-group">	
								<label class="col-sm-3 control-label">排序：</label>
								<div class="col-sm-8">
									<input id="sort" name="sort" th:value="${colorImgcls.sort}" class="form-control" type="number">
								</div>
							</div>

																					<div class="form-group">
								<div class="col-sm-8 col-sm-offset-3">
									<button type="submit" class="btn btn-primary">提交</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
	</div>
	</div>
	<div th:include="include::footer"></div>
	<script type="text/javascript" src="/js/appjs/vrs/colorImgcls/edit.js">
	</script>


	<script type="text/javascript" src="/js/appjs/common.js"></script>
	<script src="/js/layui.js"></script>


	<script>
		imageUpload2("uploadlogo","pro","simg","img");

		imageUpload("uploadlogo2","pro","simgs","colorimg");

	</script>

</body>
</html>
